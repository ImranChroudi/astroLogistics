---
interface Industry {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
  features: string[];
}

const industries: Industry[] = [
  {
    title: "Pharmaceutical Innovation",
    description: "Sterile environments, cold chain management, and strict compliance protocols for pharmaceutical manufacturing and distribution.",
    iconGradient: "from-red-500 to-pink-600",
    iconPath: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    features: ["GMP certification", "Temperature monitoring", "Traceability systems"]
  },
  {
    title: "Consumer Electronics",
    description: "Anti-static handling, component testing, and rapid assembly for cutting-edge consumer technology products.",
    iconGradient: "from-cyan-500 to-blue-600",
    iconPath: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z",
    features: ["Advanced testing labs", "Rapid prototyping", "Worldwide logistics"]
  },
  {
    title: "Omnichannel Retail",
    description: "Multi-channel order management, same-day fulfillment, and seamless returns for modern digital commerce.",
    iconGradient: "from-green-500 to-emerald-600",
    iconPath: "M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z",
    features: ["Inventory automation", "Click & collect", "Smart routing"]
  },
  {
    title: "Industrial Manufacturing",
    description: "Just-in-time supply chain, heavy-component handling, and production line synchronization for industrial operations.",
    iconGradient: "from-amber-600 to-orange-600",
    iconPath: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
    features: ["Supply synchronization", "Component assembly", "Quality inspection"]
  },
  {
    title: "Fresh & Prepared Foods",
    description: "Controlled atmosphere storage, rapid processing, and hygiene-first operations for fresh food distribution.",
    iconGradient: "from-yellow-500 to-orange-500",
    iconPath: "M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4",
    features: ["Freshness monitoring", "Food safety protocols", "Express delivery"]
  },
  {
    title: "Critical Infrastructure",
    description: "Secure handling, regulatory compliance, and specialized logistics for aerospace, defense, and government applications.",
    iconGradient: "from-indigo-600 to-violet-600",
    iconPath: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    features: ["Classified facility access", "Advanced documentation", "Verified chain of custody"]
  }
];

const checkmarkPath = "M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z";
---

<section class="py-32 bg-gradient-to-b from-slate-900 via-slate-800 to-slate-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <div class="inline-block px-4 py-2 mb-6 bg-green-200 text-primary text-sm font-semibold rounded-full border border-cyan-500/30">
        Vertical Expertise
      </div>
      <h2 class="text-5xl md:text-6xl font-bold text-white mb-6">
        Industry-Specific <span class="bg-clip-text text-secondary">Solutions</span>
      </h2>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto leading-relaxed">
        Purpose-built supply chain strategies engineered for your industry's most demanding requirements.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {industries.map((industry) => (
        <div class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-slate-800/80 to-slate-900/80 border border-slate-700/50 hover:border-cyan-500/50 p-8 transition-all duration-300 hover:shadow-2xl hover:shadow-cyan-500/10 hover:-translate-y-1">
          <!-- Background accent -->
          <div class="absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br from-cyan-500/10 to-blue-500/10 rounded-full blur-3xl group-hover:from-cyan-500/20 group-hover:to-blue-500/20 transition-all duration-300"></div>
          
          <div class={`relative w-14 h-14 rounded-lg bg-gradient-to-br ${industry.iconGradient} flex items-center justify-center mb-6 group-hover:scale-125 transition-transform duration-300 shadow-lg`}>
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={industry.iconPath} />
            </svg>
          </div>
          
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-cyan-400 transition-colors">{industry.title}</h3>
          
          <p class="text-slate-400 leading-relaxed mb-6 text-sm">
            {industry.description}
          </p>
          
          <div class="space-y-3 border-t border-slate-700/50 pt-6">
            {industry.features.map((feature) => (
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-secondary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d={checkmarkPath} clip-rule="evenodd" />
                </svg>
                <span class="text-slate-300 text-sm">{feature}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-20">
      <a 
        href="/use-cases" 
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-white bg-secondary rounded-full shadow-lg hover:shadow-2xl hover:shadow-cyan-500/30 transition-all duration-300 group"
      >
        Explore All Industries
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>