---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import heroBgImg from '../../assets/photo-1551288049-bebda4e38f71.jpg';
---

<section class="relative h-screen min-h-[600px] flex items-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <Image 
      src={"https://images.unsplash.com/photo-1623944156546-ddd5bf10796e?q=80&w=2340&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"}
      alt="Modern logistics warehouse with advanced automation"
      class="w-full h-full object-cover"
      width={2070}
      height={1380}
      decoding="async"
      fetchpriority="high"
    />
    <div class="absolute inset-0  bg-gradient-to-r  from-slate-900/95 via-slate-900/80 to-slate-900/50"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      
      
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        Accelerate Growth with Intelligent
        <span class="  bg-clip-text  text-[#00cc61] mt-2">
          Smart Logistics
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-2xl leading-relaxed">
        Unlock efficiency with AI-powered supply chain management. Real-time tracking, predictive analytics, and seamless integration for modern enterprises.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 mb-12">
        <Button href="/get-started" size="lg" class="bg-[#00cc61] px-[100px] rounded-full text-white shadow-2xl">
          Get Started Now
        </Button>
       
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-8 border-t border-white/20">
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold  bg-clip-text  text-white mb-1">500+</div>
          <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">Global Clients</div>
        </div>
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold  bg-clip-text  text-white mb-1">50M+</div>
          <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">Units Shipped</div>
        </div>
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold  bg-clip-text  text-white mb-1">99.9%</div>
          <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">On-Time</div>
        </div>
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold  bg-clip-text  text-white mb-1">15+</div>
          <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">Facilities</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>