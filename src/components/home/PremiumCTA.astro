---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
---

<section class="relative py-32 overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <Image 
      src={"https://images.unsplash.com/photo-1717386255773-1e3037c81788?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8TWFudWZhY3R1cmluZ3xlbnwwfHwwfHx8MA%3D%3D"}
      alt="Modern warehouse operations"
      class="w-full h-full object-cover"
      width={2070}
      height={1380}
    />
    <div class="absolute inset-0 bg-gradient-to-r from-slate-950/97 via-slate-900/95 to-slate-950/97"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left: Trust Indicators (Numbers) -->
      <div class="space-y-8">
        <div class="group">
          <div class="flex items-start gap-4 mb-6 p-6 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 hover:border-primary/30 transition-all">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-16 w-16 rounded-lg bg-gradient-to-br from-primary to-primary/80 shadow-lg">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            </div>
            <div>
              <div class="text-4xl font-bold text-white mb-1">28+</div>
              <div class="text-sm text-slate-300">Years of Industry Experience</div>
            </div>
          </div>
        </div>

        <div class="group">
          <div class="flex items-start gap-4 mb-6 p-6 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 hover:border-secondary/30 transition-all">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-16 w-16 rounded-lg bg-gradient-to-br from-secondary to-secondary/80 shadow-lg">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            </div>
            <div>
              <div class="text-4xl font-bold text-white mb-1">ISO 9001</div>
              <div class="text-sm text-slate-300">Quality Management Certified</div>
            </div>
          </div>
        </div>

        <div class="group">
          <div class="flex items-start gap-4 p-6 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 hover:border-primary/30 transition-all">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center h-16 w-16 rounded-lg bg-gradient-to-br from-primary to-primary/80 shadow-lg">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
            </div>
            <div>
              <div class="text-4xl font-bold text-white mb-1">24/7</div>
              <div class="text-sm text-slate-300">Premium Support & Monitoring</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: CTA Content -->
      <div class="text-white">
        <div class="inline-block px-4 py-2 mb-6 bg-green-200 backdrop-blur-sm text-primary text-sm font-semibold rounded-full border border-white/20">
          Transform Your Operations
        </div>
        
        <h2 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
          Start Your <span class="bg-clip-text bg-gradient-to-r from-cyan-400 via-blue-400 to-teal-400">Journey Today</span>
        </h2>
        
        <p class="text-xl text-slate-300 mb-12 leading-relaxed max-w-xl">
          Connect with our expert team and discover how intelligent logistics solutions can drive measurable growth for your business.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 mb-12">
          <a 
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-secondary text-white rounded-full shadow-2xl hover:shadow-3xl transition-all group"
          >
            Schedule Consultation
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a 
            href="/platform"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white/10 rounded-full shadow-2xl hover:shadow-3xl transition-all group"
          >
            Explore Platform
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- Company Trust -->
        <div class="pt-8 border-t border-white/20">
          <p class="text-xs text-slate-400 uppercase tracking-widest mb-4">Trusted by Leading Companies</p>
          <div class="grid grid-cols-3 gap-4">
            <div class="text-center p-4 rounded-lg bg-white/5 hover:bg-white/10 transition-all border border-white/10">
              <div class="text-sm font-semibold text-white mb-1">500+</div>
              <div class="text-xs text-slate-400">Enterprise Clients</div>
            </div>
            <div class="text-center p-4 rounded-lg bg-white/5 hover:bg-white/10 transition-all border border-white/10">
              <div class="text-sm font-semibold text-white mb-1">98%</div>
              <div class="text-xs text-slate-400">Satisfaction Rate</div>
            </div>
            <div class="text-center p-4 rounded-lg bg-white/5 hover:bg-white/10 transition-all border border-white/10">
              <div class="text-sm font-semibold text-white mb-1">Global</div>
              <div class="text-xs text-slate-400">Operations</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>