---
import { Image } from 'astro:assets';
import techDashboardImg from '@assets/photo-1551288049-bebda4e38f71.jpg';

interface Technology {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
}

const technologies: Technology[] = [
  {
    title: "Intelligent Automation",
    description: "Advanced algorithms optimize every aspect of your supply chain, from warehouse operations to last-mile delivery networks.",
    iconGradient: "from-primary to-primary/80",
    iconPath: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
  },
  {
    title: "Complete Visibility",
    description: "Monitor shipments live, track warehouse inventory in real-time, and access comprehensive reporting across all operations.",
    iconGradient: "from-secondary to-secondary/80",
    iconPath: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
  },
  {
    title: "Connected Sensors",
    description: "IoT-enabled monitoring tracks environmental conditions, package location, and cargo integrity throughout transit.",
    iconGradient: "from-primary to-primary/80",
    iconPath: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
  },
  {
    title: "Advanced Protection",
    description: "Military-grade encryption and compliance frameworks protect your sensitive data and meet regulatory requirements.",
    iconGradient: "from-secondary to-secondary/80",
    iconPath: "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
  }
];
---

<section class="py-32 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Visual (Left) -->
      <div class="relative order-1 lg:order-1">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <Image 
            src={techDashboardImg}
            alt="Advanced logistics technology dashboard"
            class="w-full h-full object-cover"
            width={1200}
            height={800}
          />
          <div class="absolute inset-0 bg-gradient-to-br from-primary/70 via-secondary/50 to-primary/70"></div>
          <div class="absolute inset-0 flex items-center justify-center p-8">
            <div class="text-center">
              <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center shadow-2xl">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-2">Unified Control Center</h3>
              <p class="text-white/90">Enterprise logistics intelligence</p>
            </div>
          </div>
        </div>
        
        <!-- Floating Cards -->
        <div class="absolute -top-4 -right-4 bg-primary text-white rounded-lg p-4 shadow-xl z-20 animate-pulse">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-green-400 mr-2"></div>
            <span class="text-sm font-semibold">100% Uptime SLA</span>
          </div>
        </div>
        <div class="absolute -bottom-4 -left-4 bg-secondary text-white rounded-lg p-4 shadow-xl z-20 animate-pulse" style="animation-delay: 0.5s;">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-white mr-2"></div>
            <span class="text-sm font-semibold">Live Synchronization</span>
          </div>
        </div>
      </div>

      <!-- Content (Right) -->
      <div class="order-2 lg:order-2">
        <div class="inline-block px-4 py-2 mb-6 bg-green-200 text-primary text-sm font-semibold rounded-full ">
          Intelligent Platform
        </div>
        
        <h2 class="text-4xl md:text-5xl font-bold text-primary mb-6">
          Next-Generation <span class="text-secondary">Supply Chain</span> Intelligence
        </h2>
        
        <p class="text-xl text-primary mb-8 leading-relaxed">
          Harness the power of AI, IoT, and real-time analytics to transform your operations into a competitive advantage.
        </p>

        <!-- Technology Features -->
        <div class="space-y-6">
          {technologies.map((tech, index) => (
            <div class="flex items-start group">
              <div class={`shrink-0 w-12 h-12 rounded-lg bg-gradient-to-br ${tech.iconGradient} flex items-center justify-center mr-4 group-hover:scale-110 transition-transform`}>
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={tech.iconPath} />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary mb-2">{tech.title}</h3>
                <p class="text-primary leading-relaxed">
                  {tech.description}
                </p>
              </div>
            </div>
          ))}
        </div>

        <!-- CTA -->
        <div class="mt-12">
          <a 
            href="/platform" 
            class="inline-flex items-center px-8 py-4 text-base font-semibold text-white bg-gradient-to-r from-primary to-secondary hover:shadow-lg transition-all group rounded-lg"
          >
            Discover Our Platform
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>