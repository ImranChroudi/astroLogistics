---
const testimonials = [
  {
    quote: "This partnership transformed our entire supply chain infrastructure. We've achieved a 50% reduction in operational costs while improving delivery speed by 40%. Their innovative approach and dedicated support team made all the difference in our success.",
    name: "Sarah Anderson",
    role: "Chief Operations Officer",
    company: "TechVenture Global",
    image: "https://images.pexels.com/photos/3807517/pexels-photo-3807517.jpeg?auto=compress&cs=tinysrgb&w=400&h=400&fit=crop",
    initials: "SA"
  },
  {
    quote: "Outstanding execution across every dimension. Their manufacturing solutions enabled us to scale production capacity by 3x without compromising quality. The technical expertise and service excellence are truly exceptional.",
    name: "James Mitchell",
    role: "Executive Vice President",
    company: "Industrial Solutions Co.",
    image: "https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8cGVyc29ufGVufDB8fDB8fHww",
    initials: "JM"
  },
  {
    quote: "Transformative partnership that exceeded expectations. Their logistics optimization reduced our shipping times by 38% and significantly improved customer satisfaction scores. Truly a game-changer for our business.",
    name: "Emma Richardson",
    role: "Director of Supply Chain",
    company: "Premier Retail Networks",
    image: "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fHBlcnNvbnxlbnwwfHwwfHx8MA%3D%3D",
    initials: "ER"
  }
];
---

<section class="py-32 bg-gradient-to-b from-slate-50 via-white to-slate-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <div class="inline-block px-4 py-2 mb-6 bg-green-200 text-primary text-sm font-semibold rounded-full ">
        Client Testimonials
      </div>
      <h2 class="text-5xl md:text-6xl font-bold text-primary mb-6">
        Success Stories from <span class="text-secondary">Valued Partners</span>
      </h2>
      <p class="text-xl text-primary max-w-3xl mx-auto leading-relaxed">
        Discover the tangible impact we've made for enterprise clients across industries worldwide.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2 border border-slate-100 hover:border-primary/30 flex flex-col h-full">
          <div class="bg-gradient-to-br from-slate-100 to-slate-200 p-8 text-center relative overflow-hidden">
            
            <div class="absolute inset-0 opacity-10 bg-gradient-to-br from-primary to-secondary"></div>
            
            <div class="relative z-10 w-20 h-20 mx-auto mb-4 rounded-full overflow-hidden border-4 border-white shadow-lg">
              <img 
                src={testimonial.image}
                alt={testimonial.name}
                class="w-full h-full object-cover"
              />
            </div>
            
            <h3 class="text-lg font-bold text-primary mb-1">{testimonial.name}</h3>
            <p class="text-sm text-secondary font-medium mb-1">{testimonial.role}</p>
            <p class="text-xs text-primary/70 font-semibold">{testimonial.company}</p>
          </div>

          <div class="p-8 flex flex-col flex-1 relative">
            
            <p class="text-slate-700 leading-relaxed text-sm group-hover:text-primary transition-colors italic relative z-10">
              {testimonial.quote}
            </p>

            <div class="flex gap-1 mt-6 pt-6 border-t border-slate-200">
              {[...Array(5)].map(() => (
                <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                  <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z" />
                </svg>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
   
  </div>
</section>