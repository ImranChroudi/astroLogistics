---
import BaseLayout from "../layouts/BaseLayout.astro";
import PremiumHero from "../components/home/PremiumHero.astro";
import ServiceHighlights from "../components/home/ServiceHighlights.astro";
import ImageGrid from "../components/home/ImageGrid.astro";
import StatsShowcase from "../components/home/StatsShowcase.astro";
import IndustriesServed from "../components/home/IndustriesServed.astro";
import TechnologyInnovation from "../components/home/TechnologyInnovation.astro";
import Testimonials from "../components/home/Testimonials.astro";
import PremiumCTA from "../components/home/PremiumCTA.astro";
import Button from "@/components/ui/Button.astro";
---

<BaseLayout>
  <PremiumHero />
  <ServiceHighlights />
  <ImageGrid />
    <!-- CTA Section -->
  <section class="relative py-32 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <!-- <Image
        src={ctaBgImg}
        alt="Modern warehouse operations"
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      /> -->
      <div
        class="absolute inset-0 bg-primary"
      >
      </div>
    </div>

    <!-- Content -->
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center text-white">
        <div
          class="inline-block px-4 py-2 mb-6 bg-green-200 text-primary text-sm font-semibold rounded-full"
        >
          Get Started Today
        </div>
        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight"
        >
          Ready to Optimize with <i
            class="bg-clip-text bg-linear-to-r from-blue-400 to-teal-400"
            >Smart Logistics</i
          >?
        </h2>
        <p
          class="text-xl md:text-2xl text-slate-200 mb-6 max-w-2xl mx-auto leading-relaxed"
        >
          Fill in your info, we'll take care of the rest!
        </p>
        <form class="flex">
          <input
            type="email"
            placeholder="Your Email"
            class="px-5 py-5 rounded-full mr-3 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold placeholder:text-white/50 placeholder:font-normal w-full"
          />
          <input
            type="number"
            placeholder="Your Phone Number"
            class="px-5 py-5 rounded-full mr-3 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold placeholder:text-white/50 placeholder:font-normal w-full"
          />
          <input
            type="text"
            placeholder="Your Company Name"
            class="px-5 py-5 rounded-full mr-3 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold placeholder:text-white/50 placeholder:font-normal w-full"
          />
        </form>

        <div class="flex flex-col sm:flex-row mt-[20px] gap-6 justify-center">
          <Button
            href="/facilities"
            size="lg"
            variant="outline"
            class="text-white! min-w-[300px] shadow-sm!"
          >
            Send
          </Button>
        </div>
      </div>
    </div>
  </section>
  <TechnologyInnovation />
  <StatsShowcase />
  <Testimonials />
  <PremiumCTA />
</BaseLayout>
